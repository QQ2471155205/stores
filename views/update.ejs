<%- include ./common/header.ejs  %>
<div class="tjtancbg"></div>
<div id="xgsji" class="tjtanc">
    <div class="topBox">
        <h1>修改商品信息</h1>
        <a href="/add/list" class="closeWindow"></a>
    </div>
    <form action="http://localhost:4000/product/update/<%=data.id%>" method="post" enctype="multipart/form-data">
        <div class="srk">
            <img style="width:100px;margin: 0 auto;display: block;" src="<%=data.pic%>" alt="">
            <input class="number intInput radius" type="file" name="pic" />

            <input class="number intInput radius" type="text" name="title" value="<%=data.title%>" />

            <input class="number intInput radius" type="text" name="description" value="<%=data.description%>" />

            <input class="number intInput radius" type="text" name="price" value="<%=data.price%>" />

            <button type="submit" class="sureUp radius20">提交</button>
            <div class="clear"></div>
            <div class="noNum"></div>
        </div>
    </form>
</div>

